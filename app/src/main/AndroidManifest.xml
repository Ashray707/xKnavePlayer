<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.knave_player">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/vpicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/vpicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Knave_Player">
        <activity
            android:name=".VideoPlayerActivity"
            android:configChanges="orientation|screenSize|layoutDirection"/>
        <activity
            android:name=".VideoFilesActivity"
            android:exported="false" />
        <activity
            android:name=".AllowAccessActivity"
            android:exported="false" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/SplashTheme.Knave_Player">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>